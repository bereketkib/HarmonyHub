<%- include('partials/header') %>
<main>
  <!-- Hero Section with Gradient Background -->
  <section class="hero-section text-center text-white position-relative">
    <div class="container py-5 position-relative z-index-1">
      <h1 class="display-3 fw-bold animate-fade-in">Inventory for Musical Instruments!</h1>
      <p class="lead mb-4 animate-slide-up">A smarter way to manage and track your inventory.</p>
      <div class="d-flex justify-content-center gap-4 animate-fade-in-up">
        <a href="/categories" class="btn btn-primary btn-lg shadow-lg bounce-btn">
          <i class="bi bi-folder-fill me-2"></i>Explore Categories
        </a>
        <a href="/items" class="btn btn-light btn-lg shadow-lg bounce-btn">
          <i class="bi bi-box-seam me-2"></i>Explore Items
        </a>
      </div>
    </div>
  </section>

  <!-- About Us Section -->
<section class="about-us-section py-5 text-center">
  <div class="container">
    <h2 class="text-white mb-4">About Us</h2>
    <p>We provide a smarter way to manage your musical instrument inventory. <a href="/about" class="text-light">Learn more</a></p>
  </div>
</section>


  <!-- Features Section -->
  <section class="features-section py-5">
    <div class="container text-center">
      <h2 class="mb-5 text-white animate-fade-in-up">Features</h2>
      <div class="row">
        <div class="col-md-4">
          <div class="feature-card animate-fade-in-up">
            <i class="bi bi-bar-chart-line fs-1 mb-3"></i>
            <h3 class="my-2">Track Inventory</h3>
            <p>Monitor stock levels and manage supplies effortlessly.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-card animate-fade-in-up">
            <i class="bi bi-clipboard-check fs-1 mb-3"></i>
            <h3 class="my-2">Effortless Management</h3>
            <p>Organize your inventory by categories for better management.</p>
          </div>
        </div>
        <div class="col-md-4">
          <div class="feature-card animate-fade-in-up">
            <i class="bi bi-people-fill fs-1 mb-3"></i>
            <h3 class="my-2">Collaborate Seamlessly</h3>
            <p>Share inventory details and collaborate with your team.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Call to Action Section -->
  <section class="cta-section text-center py-5 text-white">
    <h2 class="mb-4 animate-fade-in">Start Managing Your Inventory Today</h2>
    <p class="lead mb-5 animate-fade-in">Add an item and unlock the power of efficient inventory management!</p>
    <a href="/items/create" class="btn btn-light btn-lg animate-bounce">
      Add an item
    </a>
  </section>
</main>
<%- include('partials/footer') %>
