<%- include('partials/header') %>
<main class="error-page">
  <section class="error-container">
    <div class="error-icon">
      <!-- Using Bootstrap icon for error (exclamation-circle) -->
      <i class="bi bi-exclamation-circle text-danger" style="font-size: 5rem;"></i>
    </div>
    <h1 class="text-danger animated-fade-in">Oops!</h1>
    <p class="lead animated-fade-in">An error occurred: <%= errorMessage %></p>
    <div class="buttons">
      <a href="/" class="btn btn-primary animated-slide-in">Go Back to Home</a>
      <a href="/contact" class="btn btn-secondary animated-slide-in">Contact Support</a>
    </div>
    <div class="error-details">
      <p>Our team is already looking into it! In the meantime, you can:</p>
      <ul>
        <li>Check your internet connection</li>
        <li>Try refreshing the page</li>
        <li>Contact our support if needed</li>
      </ul>
    </div>
  </section>
</main>
<%- include('partials/footer') %>
