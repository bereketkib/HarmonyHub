<%- include('partials/header') %>
<main>
  <!-- Hero Section -->
  <section class="hero-section text-center position-relative">
    <div class="animated-bg"></div>
    <div class="container py-5 position-relative z-index-1">
      <h1 class="display-3 fw-bold animate-text">About Us</h1>
      <p class="lead mb-4 animate-text-delay">Discover our story and what drives us forward.</p>
    </div>
  </section>

  <!-- Our Mission Section -->
  <section class="our-mission-section py-5 text-center">
    <div class="container">
      <h2 class="fw-bold animate-fade-up">Our Mission</h2>
      <div class="mission-container row g-4">
        <div class="col-md-4 missions">
          <div class="card mission-card animate-slide-in">
            <i class="bi bi-people-fill fs-1 mission-icon"></i>
            <h3 class="my-3">Empowering Teams</h3>
            <p>We build tools that enable teams to manage inventory effortlessly and collaborate seamlessly.</p>
          </div>
        </div>
        <div class="col-md-4 missions">
          <div class="card mission-card animate-slide-in">
            <i class="bi bi-graph-up-arrow fs-1 mission-icon"></i>
            <h3 class="my-3">Driving Growth</h3>
            <p>Our mission is to help businesses scale by optimizing workflows and increasing efficiency.</p>
          </div>
        </div>
        <div class="col-md-4 missions">
          <div class="card mission-card animate-slide-in">
            <i class="bi bi-lightbulb-fill fs-1 mission-icon"></i>
            <h3 class="my-3">Innovating Solutions</h3>
            <p>Innovation drives us. We constantly improve our tools to adapt to the evolving needs of businesses.</p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Our Story Section with Parallax -->
  <section class="our-story-section py-5 text-white position-relative">
    <div class="parallax-bg"></div>
    <div class="container text-center position-relative z-index-1">
      <h2 class="fw-bold animate-fade-up">Our Story</h2>
      <div class="row g-4">
        <div class="col-md-6">
          <div class="story-card animate-fade-in">
            <img src="/images/start.jpg" alt="Our Beginning" class="story-img">
            <h3 class="my-3">The Beginning</h3>
            <p>Our journey started in a small co-working space with a big idea: to simplify inventory management.</p>
          </div>
        </div>
        <div class="col-md-6">
          <div class="story-card animate-fade-in">
            <img src="/images/growth.jpg" alt="Our Growth" class="story-img">
            <h3 class="my-3">The Growth</h3>
            <p>Today, we serve thousands of users worldwide, constantly innovating and expanding our reach.</p>
          </div>
        </div>
      </div>
    </div>
  </section>
</main>
<%- include('partials/footer') %>
